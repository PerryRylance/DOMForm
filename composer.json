{
	"name": "perry-rylance/dom-form",
	
	"version": "1.0.0",
	"minimum-stability": "stable",
	
	"description": "A DOMDocument based form library, useful for quickly populating HTML forms, server side user input validation using HTML5's form validation elements, serialization, and error handling.",
	
	"type": "library",
	"keywords": ["Form", "Serialize", "Validate", "DOM", "HTML5"],
	"homepage": "https://perryrylance.com",
	"license": "MIT",
	
	"authors": [
		{
			"name": "Perry Rylance",
			"email": "contact@perryrylance.com",
			"homepage": "https://perryrylance.com",
			"role": "Developer"
		}
	],

    "require": {
		"php": ">=8.1",
		"ext-dom": "*",
        "perry-rylance/dom-document": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "10",
		"phpdocumentor/phpdocumentor": "^3.1"
    },
	"autoload": {
		"psr-4": {
			"PerryRylance\\": "src"
		}
	},
	"scripts": {
		"tests": "php vendor/bin/phpunit tests --testdox --colors=always"
	},
	"config": {
		"allow-plugins": {
			"symfony/flex": true
		}
	}
}
